<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userSelect">

	<!-- 게시글 전체목록 조회 -->
	<!-- <select id="board_list" resultType="board" parameterType="java.util.HashMap">
		select * from board
	</select> -->
	
	<!-- 유저 idx에 맞는 영화제목 전체 조회 -->
	<select id="userSelectList" resultType="userSelect" parameterType="int">
		select * from userSelect where userIdx=#{userIdx}
	</select>
	
	<!-- 찜 목록 추가하기 -->
	<insert id="userSelectInsert" parameterType="userSelect">
		INSERT INTO userSelect VALUES(
			nextVal(seq_userSelect_userSelectIdx),
			#{userIdx},
			#{movieName}
		)
	</insert>
	
	<!-- 찜목록 중복체크 -->
	<select id="userSelectCheck" resultType="userSelect" parameterType="userSelect">
		SELECT * FROM userSelect WHERE userIdx=#{userIdx} AND movieName=#{movieName}
	</select>
	
	<delete id="userSelectDelete" parameterType="userSelect">
		DELETE FROM userSelect WHERE movieName=#{movieName} AND userIdx=#{userIdx};
	</delete>
	
</mapper>