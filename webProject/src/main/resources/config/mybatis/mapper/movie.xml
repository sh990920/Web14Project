<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="movie">

	<!-- 게시글 전체목록 조회 -->
	<!-- <select id="board_list" resultType="board" parameterType="java.util.HashMap">
		select * from board
	</select> -->
	
	<!-- 영화추가 -->
	<insert id="movieInsert" parameterType="movie">
		INSERT INTO movie VALUES(
			nextVal(seq_movie_movieIdx),
			#{movieName},
			#{movieLaunchDate},
			#{movieStory},
			#{movieGenre},
			#{movieClass},
			#{movieUrl},
			0
		)
	</insert>
	
	<!-- 영화 전체조회(영화 조회순별 정렬) -->
	<select id="movieList" resultType="movie">
		SELECT * FROM movie ORDER BY movieHit DESC
	</select>
	
	<!-- 영화 전체조회(영화 제목으로 정보 끌어오기) -->
	<select id="movieSelectList" resultType="movie" parameterType="String">
		SELECT * FROM movie WHERE movieName=#{movieName}
	</select>
	
	<!-- 영화 한개 가져오기 -->
	<select id="movieAbout" parameterType="int" resultType="movie">
		SELECT * FROM movie WHERE movieIdx=#{movieIdx}
	</select>
	
	<!-- 영화 조회수 업데이트 -->
	<update id="movieHitUpDate" parameterType="int">
		UPDATE movie SET movieHit = movieHit + 1
		WHERE movieIdx = #{movieIdx}
	</update>
	
</mapper>