<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="score">

	<!-- 게시글 전체목록 조회 -->
	<!-- <select id="board_list" resultType="board" parameterType="java.util.HashMap">
		select * from board
	</select> -->
	
	<insert id="scoreInsert" parameterType="score">
		INSERT INTO score VALUES(
			nextVal(seq_score_scoreIdx),
			#{userIdx},
			#{movieName},
			#{starScore}
		)
	</insert>
	
	<select id="scoreCheck" resultType="score" parameterType="score">
		SELECT * FROM score WHERE userIdx=#{userIdx} AND movieName=#{movieName}
	</select>
	
	<select id="scoreList" resultType="score" parameterType="String">
		SELECT * FROM score WHERE movieName=#{movieName}
	</select>
	
</mapper>