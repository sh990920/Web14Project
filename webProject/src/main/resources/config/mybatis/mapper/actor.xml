<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="actor">

	<!-- 게시글 전체목록 조회 -->
	<!-- <select id="board_list" resultType="board" parameterType="java.util.HashMap">
		select * from board
	</select> -->
	
	<!-- 배우추가 -->
	<insert id="actorInsert" parameterType="actor">
		INSERT INTO actor VALUES(
			nextVal(seq_actor_actorIdx),
			#{movieName},
			#{actorName}
		)
	</insert>
	
	<!-- 영화 제목에 맞는 배우들 끌어오기 -->
	<select id="actorList" parameterType="String" resultType="actor">
		SELECT * FROM actor WHERE movieName=#{movieName}
	</select>
	
</mapper>