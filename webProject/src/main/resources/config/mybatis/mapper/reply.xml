<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reply">

	<!-- 게시글 전체목록 조회 -->
	<!-- <select id="board_list" resultType="board" parameterType="java.util.HashMap">
		select * from board
	</select> -->
	
	<!-- 평점 추가 -->
	<insert id="insertReply" parameterType="reply">
		INSERT INTO reply VALUES(
			nextVal(seq_reply_replyIdx),
			#{movieName},
			#{replyComment},
			#{userIdx},
			sysdate()
		)
	</insert>
	
	<!-- 댓글 찾기 -->
	<select id="selectAll" parameterType="String" resultType="reply">
		SELECT * FROM reply WHERE movieName=#{movieName}
	</select>
	
	<!-- 평점 삭제 -->
	<delete id="deleteReply" parameterType="reply">
		DELETE FROM reply WHERE userIdx=#{userIdx} AND movieName=#{movieName} AND replyComment=#{replyComment}
	</delete>
	
</mapper>