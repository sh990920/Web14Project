<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="b">
	
	<!-- 새댓글작성  -->
	<insert id="reply_insert" parameterType="vo.ReplyVO">
		insert into reply values(
			seq_board_replyIdx.nextVal, 
			#{movieName}, 
			#{replyComment}, 
			#{userId},  
			sysdate
		)
	</insert>
	
		
	<!-- 삭제-->
	<delete id="delete_reply" parameterType="vo.ReplyVO">
		delete * from reply where replyIdx = #{replyIdx}
	</delete>
	
	<!-- 댓글 불러오기-->
	<select id="reply_" resultType="vo.ReplyVO">
		select * from reply
	</select>
</mapper>






























